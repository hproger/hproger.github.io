  &__header-icon
    display inline-block
    margin-left 5px
  &__header-desc
    fontSSP()
    font-size 16px
    line-height 22px
    color #666666

.list-employee
  display flex
  flex-wrap wrap
  @media (max-width 1200px)
    justify-content space-around
  &_negative-margin
    margin 0 -10px
  &__card
    margin 0 10px 20px


.footer-container
  border-top 1px solid #EFEFEF
  padding-left 20px
  padding-right 20px
  &__inner
    max-width maxWidth
    margin 0 auto
    padding-top 35px
    padding-bottom 35px
    display flex
    align-items center
    justify-content space-between

.copyright
  fontSSP()
  font-size 14px
  line-height 20px
  color #ABABAB
.partners-logo
  &__link
    text-decoration none
    display inline-block
    vertical-align top
    margin-left 50px
    &_image
      display inline-block
      width auto
      height 26px
      filter contrast(0)
      transition filter .2s ease-in-out
